{% extends 'base.html.twig' %}

{% block title %}Test Shop{% endblock %}
{# {% dump products %} #}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .article_list_item {
        width: 40%;
        margin: 20px 20px;
        display: inline-block;
    }
</style>

{% for product in products %}
    {# {{ dump(product) }} #}
<div class="article_list_item">
<div class="order_{{product.id}}"><input type="button"></input></div>
<span hidden>{{ product.id }}</span>
    <p>Name: {{product.name}}</br>
    Beschreibung: {{product.description}}</br>
    Preis: {{product.price}}</br>
    {% if product.artist %} Interpret: {{product.artist}}</br> {% endif %}
    {% if product.weight %} Gewicht: {{product.weight}}</br> {% endif %}
    </p>
</div>
{% endfor %}



{% endblock %}
