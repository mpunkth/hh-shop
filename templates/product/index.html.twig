{% extends 'base.html.twig' %}

{% block title %}Test Shop{% endblock %}

{% block body %}
<div class="article_list container">
    {% for product in products %}
        <div class="article_list_item row">
            <div class="col-sm-6">
                <p>
                    Name: {{product.name}}</br>
                    Beschreibung: {{product.description}}</br>
                    Preis: {{product.price}}</br>
                    {% if product.artist %} Interpret: {{product.artist}}</br> {% endif %}
                    {% if product.weight %} Gewicht: {{product.weight}}</br> {% endif %}
                </p>
            </div>
            <div class="order_product col-sm-6">
                <input type="checkbox" class="" id="{{product.id}}" value="{{product.name}}" name="{{product.name}}"></input>
                <label for="{{product.name}}">{{product.name}} Zur Bestellung hinzuf√ºgen</label><br>
            </div>
        </div>

    {% endfor %}

    <div>
        <input class="row" type="submit" id="submitOrder" value="Bestellen">
    </div>
</div>

    
{% endblock %}
{% block javascripts %}
        <script src="shop.js"></script>
{% endblock %}
